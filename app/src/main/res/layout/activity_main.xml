<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:menu="@menu/options_menu"
                app:titleTextColor="@color/colorAccent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/problemLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/result_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="CORRECT!"
                    android:textColor="#eaf458"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/operator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/colorAccent"
                    android:textSize="120sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/constraintLayout" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/firstNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:text="123"
                        android:textColor="@color/colorAccent"
                        android:textSize="120sp"
                        app:layout_constraintBottom_toTopOf="@+id/secondNumber"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/secondNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:text="456"
                        android:textColor="@color/colorAccent"
                        android:textSize="120sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/divider"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:text="___________________________"
                    android:textColor="#eaf458"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/constraintLayout" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/answerLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:text="7890"
                    android:textColor="@color/colorAccent"
                    android:textSize="120sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/inputLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <Button
                        android:id="@+id/one"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_weight="30"
                        android:background="@color/primary_lightVariant"
                        android:onClick="numberClick"
                        android:text="1"
                        android:textColor="@color/colorAccent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/two"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="30"
                        android:background="@color/primary_lightVariant"
                        android:onClick="numberClick"
                        android:text="2"
                        android:textColor="@color/colorAccent"
                        app:layout_constraintStart_toEndOf="@+id/one"
                        app:layout_constraintTop_toTopOf="@+id/one" />

                    <Button
                        android:id="@+id/six"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight="30"
                        android:background="@color/primary_lightVariant"
                        android:onClick="numberClick"
                        android:text="6"
                        android:textColor="@color/colorAccent"
                        app:layout_constraintStart_toStartOf="@+id/one"
                        app:layout_constraintTop_toBottomOf="@+id/one" />

                    <Button
                        android:id="@+id/nine"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="30"
                        android:background="@color/primary_lightVariant"
                        android:onClick="numberClick"
                        android:text="9"
                        android:textColor="@color/colorAccent"
                        app:layout_constraintStart_toEndOf="@+id/eight"
                        app:layout_constraintTop_toTopOf="@+id/eight" />

                    <Button
                        android:id="@+id/three"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="30"
                        android:background="@color/primary_lightVariant"
                        android:onClick="numberClick"
                        android:text="3"
                        android:textColor="@color/colorAccent"
                        app:layout_constraintStart_toEndOf="@+id/two"
                        app:layout_constraintTop_toTopOf="@+id/two" />

                    <Button
                        android:id="@+id/eight"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="30"
                        android:background="@color/primary_lightVariant"
                        android:onClick="numberClick"
                        android:text="8"
                        android:textColor="@color/colorAccent"
                        app:layout_constraintStart_toEndOf="@+id/seven"
                        app:layout_constraintTop_toTopOf="@+id/seven" />

                    <Button
                        android:id="@+id/five"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="30"
                        android:background="@color/primary_lightVariant"
                        android:onClick="numberClick"
                        android:text="5"
                        android:textColor="@color/colorAccent"
                        app:layout_constraintStart_toEndOf="@+id/four"
                        app:layout_constraintTop_toTopOf="@+id/four" />

                    <Button
                        android:id="@+id/zero"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginLeft="4dp"
                        android:background="@color/primary_lightVariant"
                        android:onClick="numberClick"
                        android:text="0"
                        android:textColor="@color/colorAccent"
                        app:layout_constraintStart_toEndOf="@+id/nine"
                        app:layout_constraintTop_toTopOf="@+id/nine" />

                    <Button
                        android:id="@+id/four"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="30"
                        android:background="@color/primary_lightVariant"
                        android:onClick="numberClick"
                        android:text="4"
                        android:textColor="@color/colorAccent"
                        app:layout_constraintStart_toEndOf="@+id/three"
                        app:layout_constraintTop_toTopOf="@+id/three" />

                    <Button
                        android:id="@+id/seven"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="30"
                        android:background="@color/primary_lightVariant"
                        android:onClick="numberClick"
                        android:text="7"
                        android:textColor="@color/colorAccent"
                        app:layout_constraintStart_toEndOf="@+id/six"
                        app:layout_constraintTop_toTopOf="@+id/six" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <Button
                    android:id="@+id/submit"
                    android:layout_width="77dp"
                    android:layout_height="77dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:background="@color/colorPrimaryDark"
                    android:onClick="submitClick"
                    android:text="âœ“"
                    android:textColor="@color/colorAccent"
                    android:textSize="64sp"
                    app:layout_constraintStart_toEndOf="@+id/inputLayout"
                    app:layout_constraintTop_toTopOf="@+id/inputLayout" />

                <Button
                    android:id="@+id/clear"
                    android:layout_width="76dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@color/primary_lightVariant"
                    android:onClick="clearClick"
                    android:text="clear"
                    android:textColor="@color/colorAccent"
                    app:layout_constraintEnd_toStartOf="@+id/inputLayout"
                    app:layout_constraintTop_toTopOf="@+id/inputLayout" />

                <Button
                    android:id="@+id/separator"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="30"
                    android:background="@color/primary_lightVariant"
                    android:onClick="numberClick"
                    android:text="."
                    android:textColor="@color/colorAccent"
                    android:visibility="invisible"
                    app:layout_constraintStart_toStartOf="@+id/clear"
                    app:layout_constraintTop_toBottomOf="@+id/clear"
                    tools:visibility="invisible" />

                <Button
                    android:id="@+id/negative"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="30"
                    android:background="@color/primary_lightVariant"
                    android:onClick="numberClick"
                    android:text="-"
                    android:textColor="@color/colorAccent"
                    app:layout_constraintStart_toEndOf="@+id/separator"
                    app:layout_constraintTop_toTopOf="@+id/separator" />

                <TextView
                    android:id="@+id/result"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="CORRECT!"
                    android:textColor="#eaf458"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/separator"
                    app:layout_constraintTop_toBottomOf="@+id/inputLayout" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1:23"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="@+id/submit"
                    app:layout_constraintTop_toBottomOf="@+id/inputLayout"
                    tools:visibility="invisible" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>